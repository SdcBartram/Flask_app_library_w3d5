{% extends "base.jinja" %}

{% block content %}

<h2 class="sub_heading">Add a book to the library:</h2>

<form class="form_input" action="/books" method="post">
    <label for="title">Book Title</label>
    <input class="input_text" type="text" name="title" id="title">
    <label for="author">Author</label>
    <input class="input_text" type="text" name="author" id="author">
    <label for="genre">Genre</label>
    <input class="input_text" type="text" name="genre" id="genre">
    <div>
        <label for="checked_out">Checked out</label>
        <input type="checkbox" name="checked_out" id="checked_out">
    </div>
    <input class="submit_button" type="submit" value="Submit">
</form>

<h2 class="sub_heading">All Books</h2>

<div class="book_container">
    {% for book in books %}
    <div class="book">
        <ul>
            <li>
                <a href="books/{{books.index(book)}}">{{book.title}}</a>
            </li>
            <li>
                {{book.author}}
            </li>
            <li>
                {{book.genre}}
            </li>
        </ul>

        {% if book.checked_out %}
        <p><i>Checked out</i></p>
        {% endif %}


        <form class="delete_book" action="/books/delete/{{ book.title }}" method="POST">
            <input class="submit_button" type="submit" value="Delete">

        </form>

    </div>
    {% endfor %}
</div>

{% endblock %}